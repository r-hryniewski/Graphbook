        <img class="img-responsive" src="@Model.ProfilePictureUrl" />
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <h2>@string.Format("{0} {1}", Model.Name, Model.LastName)</h2>
                <p>I'm to lazy to fill that up with anything (maybe employment and finished school?)</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h1>Friend invites</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h1>Friend sugestions</h1>
    </div>
</div>
